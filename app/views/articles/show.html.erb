<div class="row">
	<div class="col-sm-8">
		<div class="article_content">
			<h3><%=@article.title%></h3>
			<pre><%=@article.content%></pre>
		</div>

		<h4>最新评论：</h4>

        <hr size="1" noshade="noshade" style="#cccccc dotted;" />

         
		 <% @article_comments.each do |comment| %>
			  <div class="article_comment">
				   <pre><%= comment.content%></pre>
		           <i><%= comment.created_at.to_s(:db) %></i>
		           <%= link_to '删除', [comment.article, comment],
							               method: :delete,
							               data: { confirm: 'Are you sure?' } %>
	           </div>  
         <% end %>    
        

 		<hr size="1" noshade="noshade" style="#cccccc dotted;"/>

        <%=form_for [@article, @article.comments.build] do |f|%>
	        <div class="form_content">
	        	<%=f.text_area :content, class: "form-control", style: "resize:none", rows: "5" ,placeholder: "评论" %>
	        </div>

	        <div align="right">
	        	<%=f.submit "发布评论", class: "btn btn-primary", align: "right"%>
	        </div>
        <%end%>

	</div>
	<div class="col-sm-4"></div>
</div>








